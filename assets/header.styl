header
  padding: 16px 0 15px;
  width: 100%;
  border-bottom: 1px solid #ebebeb;

  .headers-buttons
    padding 0 16px;
    height 40px;

  .header-wrap
    display: flex;
    align-items: center;
    padding: 0 10px;
    height 40px;
    max-width 1300px;
    margin 0 auto;

    .header-left
      display: flex;
      align-items: center;

      .search-auto__header
        height: 40px;
        line-height: 40px;
        padding: 0 16px;
        font-family: 'AvitoSans';
        font-size: 16px;
        width: 277px;

      .autoteka-logo
        background: url("/img/header-logo.svg")
        width 147px;
        height 36px;
        margin-right 30px;

      .headers-input
        display: flex;

    .header-right
      display: flex;
      gap: 15px;
      margin-left: auto;
      height: 40px;
      align-items: center;

      .login-button
        margin-left 15px;
        background: #ccecff;
        color: #008aed;

        &:hover
          background-color: #a1dfff;

        &:focus
          box-shadow: 0 0 0 3px #80d4ff;

        &:active
          background: #80d4ff;