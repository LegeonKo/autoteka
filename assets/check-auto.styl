.check-auto__wrap
  background: linear-gradient(#fff 49%,#f2efe9);

  .check-auto__body
    max-width: 1300px;
    padding: 60px 10px 0;
    margin: 0 auto;
    background-image: url("/img/carapp.png");
    background-repeat: no-repeat;
    background-size: 441px 380px;
    background-position: 849px 42px;
    padding-bottom: 80px;

    .check-auto
      margin-bottom: 80px;

      &__header
        font-size 60px;
        max-width 813px;
        line-height 64px;
        font-family: 'EuclidCircularB',Tahoma,Verdana,Arial,sans-serif;
        font-weight: 600;
        margin-bottom 20px;

      &__content
        font-family: 'Avito Mobile Sans',Tahoma,Verdana,Arial,sans-serif;
        font-size: 20px
        line-height 28px;
        max-width 622px;

      &__search-wrap
        margin: 24px 0 16px;

    .check-auto__offers
      gap 182px;

      .checkbuy-img
        background: url("/img/checkbuy.png") no-repeat;
        background-size cover
        height 90px;
        width 90px;
        margin-right 30px;

      .checkauto-img
        background: url("/img/checkauto.png") no-repeat;
        background-size cover
        height 90px;
        width 90px;
        margin-right 30px;

      .check-auto__offers-header
        font-size: 20px;
        line-height: 26px;
        margin-bottom: 10px;
        font-family: 'EuclidCircularB',Tahoma,Verdana,Arial,sans-serif;
        font-weight: 600;

      .check-auto__offers-content
        font-size: 16px;
        line-height: 22px;
        font-family: 'Avito Mobile Sans',Tahoma,Verdana,Arial,sans-serif;
        font-weight: 400;
        margin-bottom: 16px;

      .check-auto__offers-button
        font-size: 14px;
        font-family: 'Avito Mobile Sans','Lato','Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
        font-weight: 400;
        height: 32px;
        padding: 0 12px;
        background-color: white;
        color black;
        box-shadow: 0 4px 12px rgba(87,72,43,.2), 0 2px 3px rgba(97,79,46,.1);

        &:hover
          background-color: #ede9e1;

        &:active
          background-color: #dbd3c1;